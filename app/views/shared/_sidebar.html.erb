<div class="rightSidebar">
  <div class="registerWidget">
    <a>
      <div class="registerFormAnchor">
        <h2 class="joinUsH2">Join us?</h2>
        <span class="iconSize" data-icon="&#xe006;"></span>
      </div>
    </a>
    <%= form_for(resource, :as => resource_name, url: registration_path(resource_name), html: { id: "registerForm", class: "hideRegisterForm hideRegisterFormOpacity" } ) do |f| %>
        <%= f.text_field :username, placeholder: "Username"  %>
        <%= f.text_field :email, placeholder: "e-mail" %>
        <%= f.password_field :password, placeholder: "Password"  %>
        <%= f.password_field :password_confirmation, class: "registerPasswordConfirm", placeholder: "Confirm password" %>
        <%= f.submit "Register", class: "registerButton" %>
    <% end %>
    <p>Contribute anonymously, or tell us your desired username and e-mail address to post as yourself.</p>
    <div class="postVideo">
      <h2>Post New Video</h2>
      <p class="singleLineTxt">You don't have to join to contribute.</p>

      <%= render :partial => 'video_posts/form', :video_posts => @video_posts %>

    </div>
  </div>
</div>
